<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>トラブル知らずのシステム設計</td>
      <td>システム設計の要点を図解で説明してくれます</td>
      <td><a class="show_27165" href="/books/27165">Show</a></td>
      <td><a class="edit_27165" href="/books/27165/edit">Edit</a></td>
      <td>
      <a data-confirm="Are you sure?" class="destroy_27165" rel="nofollow" data-method="delete" href="/books/27165">Destroy</a>
      </td>
    </tr>

  </tbody>
</table>
<% end %>

<div class="field">
  <label for="book_title">Title </label>
  <input class="book_title" type="text" name="book[title]" id="book_title">
</div>

<div =class"field">
  <label for="book_body">Body</label>
  <textarea class="book_body" name="book[body]" id="book_body"></textarea>
</div>

<div class="actions">
    <input type="submit" name="commit" value="Create Book" data-disable-with="Create Book">
  </div>



<h2>New book</h2>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create Book' %>

  <% end %>


